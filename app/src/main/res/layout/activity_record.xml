<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_device_address"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/device_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_device"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_state"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/connection_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/disconnected"
                android:textSize="14sp"
                android:textAlignment="viewEnd"/>

        </LinearLayout>
    </LinearLayout>
    <!--> RESOLUTION AND PLOT SWITCH </!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_resolution"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/resolution_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:text="@string/no_data"
            android:textSize="14sp" />

        <TextView
        android:id="@+id/gain_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_gain"
        android:textSize="14sp"
        android:textStyle="bold" />

        <Spinner
            android:id="@+id/gain_spinner"
            style="@android:style/Widget.Material.Spinner"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textSize="12sp"
            android:textStyle="normal" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <Switch
            android:id="@+id/switch_plots"
            android:layout_width="wrap_content"
            android:layout_height="14sp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:switchPadding="30dp"
            android:checked="false"
            android:enabled="true"
            android:text="Plot"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>
    <!--> CHANNEL VALUES </!-->
    <LinearLayout
        android:id="@+id/channelValueRow1"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_margin="1dp"
        android:orientation="horizontal">
        <!-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_data"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />
        </!-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/channelValueRow2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_margin="1dp"
        android:orientation="horizontal">
        <!-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text = "Data:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible" />
        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        </!-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/channelValueRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="horizontal">
        <!-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text = "Data:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible"
            />
        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
         </!-->
    </LinearLayout>
    <!--> CHECKBOX ROWS </!-->

    <LinearLayout
        android:id="@+id/checkBoxRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/checkBoxRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/checkBoxRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <!--> CHART </!-->
    <LinearLayout
        android:id="@+id/linearLayout_chart"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_weight="0"
        android:orientation="vertical"
        android:visibility="visible">
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="-8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/YAxis_title"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:rotation="-90"
            android:text="@string/YAxis_label"
            android:textSize="12sp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/layout_chart"
            android:layout_width="fill_parent"
            android:layout_height="300dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/XAxis_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/XAxis_label"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:enabled="true"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButtonRecord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_fiber_manual_record_red_24dp" />

        <ImageButton
            android:id="@+id/imageButtonSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_save_black_24dp" />

        <ImageButton
            android:id="@+id/imageButtonDiscard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_delete_black_24dp" />

    </LinearLayout>


</LinearLayout>
